# User Network Service Configuration
# Copy this file to .env and update values

# Service
SERVICE_NAME=user-network
ENVIRONMENT=development
DEBUG=false
HOST=0.0.0.0
PORT=8001

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/user_network
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# API Keys (comma-separated)
# Generate with: python -c "from src.core.security import generate_api_key; print(generate_api_key())"
API_KEYS=un_your_api_key_here

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

