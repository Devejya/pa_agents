# Yennifer Chat API - Production Environment
# Copy to .env and fill in values

# Required - OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional - OpenAI model (defaults to gpt-4o)
OPENAI_MODEL=gpt-4o

# Database (PostgreSQL - uses same RDS as user_network)
DATABASE_URL=postgresql://postgres:password@your-rds-host:5432/user_network
DATABASE_POOL_SIZE=10

# Encryption key for OAuth tokens (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key

# User Network Service URL
USER_NETWORK_API_URL=http://127.0.0.1:8001
USER_NETWORK_API_KEY=your-user-network-api-key

# Service Configuration
ENVIRONMENT=production
DEBUG=false
HOST=127.0.0.1
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yennifer.ai,https://www.yennifer.ai

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Settings (IMPORTANT: Use a strong secret in production!)
JWT_SECRET_KEY=generate-a-long-random-secret-key-here
JWT_EXPIRE_HOURS=168

# Allowed Users (comma-separated emails)
ALLOWED_EMAILS=draghuva@gmail.com,cursoragentdec23@gmail.com,draghuva2021@gmail.com

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://yennifer.ai

# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=yennifer@yennifer.ai
SENDGRID_FROM_NAME=Yennifer

# Admin email for notifications
ADMIN_EMAIL=draghuva@gmail.com

