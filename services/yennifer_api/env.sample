# Yennifer API Service Configuration

# Service
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# User Network Service
USER_NETWORK_API_URL=http://localhost:8001
