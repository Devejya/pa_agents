# Yennifer API Service Configuration

# Service
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Database (PostgreSQL - uses same RDS as user_network)
DATABASE_URL=postgresql://postgres:password@your-rds-host:5432/user_network
DATABASE_POOL_SIZE=10

# Encryption key for sensitive data (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key

# User Network Service
USER_NETWORK_API_URL=http://localhost:8001
USER_NETWORK_API_KEY=your-api-key

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Settings (auto-generated if not set)
JWT_SECRET_KEY=your-secure-secret-key-at-least-32-chars
JWT_EXPIRE_HOURS=168  # 7 days

# Allowed Users (comma-separated emails)
ALLOWED_EMAILS=draghuva@gmail.com,cursoragentdec23@gmail.com,draghuva2021@gmail.com,rajeev69kumar@gmail.com

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=yennifer@yennifer.ai
SENDGRID_FROM_NAME=Yennifer

# Admin email for notifications
ADMIN_EMAIL=your-admin-email@example.com

# Google Custom Search API (for web search tool)
# Get API key from: https://console.cloud.google.com/apis/credentials
# Create CSE at: https://programmablesearchengine.google.com/controlpanel/create
GOOGLE_CSE_API_KEY=your-google-cse-api-key
GOOGLE_CSE_ID=your-custom-search-engine-id
GOOGLE_CSE_MAX_RESULTS=5
GOOGLE_CSE_ENABLED=true

# PostHog Analytics (same project as frontend waitlist)
# Use the same API key as VITE_PUBLIC_POSTHOG_KEY from frontend
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://us.i.posthog.com

